<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_mywarning_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/edit_warning_header"
        android:text="Edit Warning Subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent">
    </TextView>

    <RelativeLayout
        android:id="@+id/edit_area_relative"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorAccent"
        android:layout_below="@id/edit_warning_header">
        <TextView
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            />

        <Spinner
            android:padding="5sp"
            android:id="@+id/areaSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select areaS"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimaryDark"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_level_relative"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorAccent"
        android:layout_below="@id/edit_area_relative">
        <TextView
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            />

        <Spinner
            android:padding="5sp"
            android:id="@+id/levelSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimaryDark"

            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/edit_type_relative"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorAccent"
        android:layout_below="@id/edit_level_relative">
        <TextView
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="15sp"
            android:gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            />

        <Spinner
            android:padding="5sp"
            android:id="@+id/typeSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimaryDark"

            />
    </RelativeLayout>


    <Button
        android:id="@+id/editWarningB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_type_relative"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:text="save"
        android:layout_margin="5sp"
        android:textSize="15dp">
    </Button>

    <Button
        android:id="@+id/deleteWarningB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editWarningB"
        android:background="@color/colorRed"
        android:textColor="@color/colorAccent"
        android:text="DELETE"
        android:layout_margin="5sp"
        android:textSize="15dp">
    </Button>

    <Button
        android:id="@+id/cancelWarningB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteWarningB"
        android:background="@color/colorGray"
        android:textColor="@color/colorAccent"
        android:text="CANCEL"
        android:layout_margin="5sp"
        android:textSize="15dp">
    </Button>


</RelativeLayout>